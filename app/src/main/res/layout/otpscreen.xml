<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/otp_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backclr"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <include layout="@layout/main_bar"></include>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="center"
                android:text="Enter Verification Code"
                android:textColor="#000"
                android:textSize="15sp"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="We have sent you a 4-digit varification code on"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:visibility="visible" />


            <LinearLayout
                android:id="@+id/layout_otp"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_below="@+id/layout_header"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextone"
                    android:layout_width="50sp"
                    android:layout_margin="5dp"
                    android:layout_height="50sp"
                    android:background="@drawable/backgraund_button"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:nextFocusRight="@+id/editTexttwoo"
                    android:textSize="14sp">

                    <!--<requestFocus />-->
                </EditText>

                <EditText
                    android:layout_margin="5dp"
                    android:id="@+id/editTexttwoo"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@drawable/backgraund_button"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textSize="14sp" />

                <EditText
                    android:layout_margin="5dp"
                    android:id="@+id/editTextthree"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@drawable/backgraund_button"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textSize="14sp" />

                <EditText
                    android:layout_margin="5dp"
                    android:id="@+id/editTextfour"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@drawable/backgraund_button"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textSize="14sp" />



            </LinearLayout>


            <LinearLayout
                android:id="@+id/resend_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_relode" />

                <TextView
                    android:id="@+id/reaend_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Resend code"
                    android:textColor="#9B9B9B"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/resneddd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/mTextField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9B9B9B"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>