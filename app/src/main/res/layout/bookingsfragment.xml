<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backclr"
    android:orientation="vertical">

    <include layout="@layout/main_bar" />

    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="George Smith"
        android:textSize="@dimen/_25sdp"
        android:textColor="@color/barblue"
        />
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center_vertical"
                android:textSize="@dimen/_15sdp"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:text="Postings (0)"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>


            <ImageView

                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:padding="8dp"
                android:src="@drawable/rightarrow"
                android:visibility="visible"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center_vertical"
                android:textSize="@dimen/_15sdp"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:text="Contracts (0)"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>


            <ImageView

                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:padding="8dp"
                android:src="@drawable/rightarrow"
                android:visibility="visible"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

<LinearLayout
    android:gravity="center"
    android:layout_gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_margin="8dp"
        android:layout_width="180dp"
        android:layout_height="35dp"

        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="Rehire"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="13sp" />

    <Button
       android:layout_margin="8dp"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:background="@color/barblue"
        android:gravity="center"
        android:text="Post jobs"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="13sp" />

</LinearLayout>
</LinearLayout>